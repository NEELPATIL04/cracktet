# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/cracktet"

# Video Processing Configuration
STORAGE_PATH="/path/to/your/storage"
VIDEO_JWT_SECRET="your-video-jwt-secret-key"

